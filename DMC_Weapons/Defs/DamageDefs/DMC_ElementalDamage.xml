<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- DMC Elemental Damage Types -->
  
  <!-- Demonic Fire Damage -->
  <DamageDef>
    <defName>DMC_DemonicFire</defName>
    <label>demonic fire</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} was consumed by demonic flames.</deathMessage>
    <hediff>Burn</hediff>
    <armorCategory>Heat</armorCategory>
    <defaultDamage>10</defaultDamage>
    <defaultArmorPenetration>0.20</defaultArmorPenetration>
    <buildingDamageFactor>1.0</buildingDamageFactor>
    <plantDamageFactor>4.0</plantDamageFactor>
    <explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
    <impactSoundType>Slice</impactSoundType>
  </DamageDef>

  <!-- Demonic Ice/Frost Damage -->
