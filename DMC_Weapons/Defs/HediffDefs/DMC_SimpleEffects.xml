<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Tool-applied hediffs for weapon effects -->
  
  <!-- Fire tool hediff -->
  <HediffDef>
    <defName>DMC_FireStrike</defName>
    <label>fire strike</label>
    <description>This character was struck by demonic fire and is suffering from supernatural burns.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1, 0.4, 0.2)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.8</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>burning</label>
        <minSeverity>0.01</minSeverity>
        <painOffset>0.15</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <!-- Ice tool hediff -->
  <HediffDef>
    <defName>DMC_IceStrike</defName>
    <label>ice strike</label>
    <description>This character was struck by demonic ice and is suffering from supernatural cold.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.4, 0.8, 1)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.6</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>chilled</label>
        <minSeverity>0.01</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <!-- Lightning tool hediff -->
  <HediffDef>
    <defName>DMC_LightningStrike</defName>
    <label>lightning strike</label>
    <description>This character was struck by demonic lightning and is suffering from electrical shock.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1, 1, 0.4)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.0</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>shocked</label>
        <minSeverity>0.01</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>