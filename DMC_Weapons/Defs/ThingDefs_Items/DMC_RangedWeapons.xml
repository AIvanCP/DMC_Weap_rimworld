    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>14</damageAmountBase>
      <stoppingPower>0.8</stoppingPower>
      <armorPenetrationBase>0.25</armorPenetrationBase>
      <speed>80</speed>
    </projectile>
  </ThingDef>

</Defs>